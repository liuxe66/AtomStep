    <attr format="boolean|reference" name="wheel_itemTextBoldSelected"/>
    <attr format="color|reference" name="wheel_itemTextColor"/>
    <attr format="color|reference" name="wheel_itemTextColorSelected"/>
    <attr format="dimension|reference" name="wheel_itemTextSize"/>
    <attr format="dimension|reference" name="wheel_itemTextSizeSelected"/>
    <attr format="string|reference" name="wheel_maxWidthText"/>
    <attr format="boolean|reference" name="wheel_sameWidthEnabled"/>
    <attr format="integer|reference" name="wheel_visibleItemCount"/>
